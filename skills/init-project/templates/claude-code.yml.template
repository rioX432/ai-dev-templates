# Claude Code â€” Autonomous Issue Resolution
# Triggers when @claude is mentioned in an issue comment
#
# Prerequisites:
# - ANTHROPIC_API_KEY secret
# - GitHub App or PAT with issue/PR permissions

name: Claude Code

on:
  issue_comment:
    types: [created]

jobs:
  claude:
    if: contains(github.event.comment.body, '@claude')
    runs-on: ubuntu-latest
    permissions:
      contents: write
      pull-requests: write
      issues: write

    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Run Claude Code
        uses: anthropics/claude-code-action@v1
        with:
          anthropic_api_key: ${{ secrets.ANTHROPIC_API_KEY }}
          # Uncomment to use ai-dev plugin:
          # plugin_dirs: "./path-to-ai-dev-templates"

          # The action will parse the @claude mention and the issue context
          # to determine what to do. It effectively runs the equivalent of
          # /ai-dev:fix-issue for the current issue.
